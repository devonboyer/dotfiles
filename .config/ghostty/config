command=/bin/zsh

# Basic appearance
font-family = "JetBrains Mono"
font-size = 16

# Essential settings
scrollback-limit = 50000
shell-integration = "zsh"

# Window size
window-width = 140
window-height = 30

# Basic key bindings
keybind = "cmd+t=new_tab"
keybind = "cmd+w=close_surface"
keybind = "cmd+d=new_split:right"
keybind = shift+enter=text:\n
